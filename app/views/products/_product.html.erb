
<div class="columns is-multiline">
<% @products.each do |product| %>
  <div class="column is-one-quarter">
    <div class="card">
      <header class="card-header">
        <p class="card-header-title"><%= link_to product.title, product %></p>
      </header>
      <div class="card-image">
        <figure class="image is-4by3">
        <%=link_to image_tag(product.image, size: "100", alt: product.title), product%>
        </figure>
      </div>
      <div class="card-content">
        <div class="media">
          <div class="media-content">
            <p> Price: <%=number_to_currency product.price.to_i%></p>
            <% if @cart%>
              <% if @cart.include?(product) %>
                <p><i>Product added to your cart.</i></p>
                <%= button_to 'Remove from cart', remove_from_cart_path(product), method: :delete%>
              <% else %>
                <p><%=link_to 'add to cart', add_to_cart_path(product.id), method: :post%></p>
              <% end %>
            <% else %>
                <p><%=link_to 'add to cart', add_to_cart_path(product.id), method: :post%></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<%end%>
</div>